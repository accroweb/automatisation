{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "n8n Contract",
  "type": "object",
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["identity", "objective", "preconditions", "entries", "processing", "outputs", "guarantees", "errors", "constraints"],
        "properties": {
          "identity": {
            "type": "object",
            "required": ["name", "role", "dependencies"],
            "properties": {
              "name": {"type": "string"},
              "role": {"type": "string"},
              "dependencies": {
                "type": "object",
                "properties": {
                  "upstream": {"type": "array", "items": {"type": "string"}},
                  "downstream": {"type": "array", "items": {"type": "string"}}
                },
                "required": ["upstream", "downstream"]
              }
            }
          },
          "objective": {"type": "string"},
          "preconditions": {
            "type": "array",
            "items": {"type": "string"}
          },
          "entries": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type", "constraints"],
              "properties": {
                "name": {"type": "string"},
                "type": {"type": "string"},
                "constraints": {"type": "string"}
              }
            }
          },
          "processing": {"type": "string"},
          "outputs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type", "notes"],
              "properties": {
                "name": {"type": "string"},
                "type": {"type": "string"},
                "notes": {"type": "string"}
              }
            }
          },
          "conditions": {"type": "string"},
          "guarantees": {"type": "string"},
          "errors": {
            "type": "array",
            "items": {"type": "string"}
          },
          "constraints": {
            "type": "array",
            "items": {"type": "string"}
          }
        }
      }
    },
    "workflow": {
      "type": "object",
      "required": ["description", "engagements", "dependencies", "invariants"],
      "properties": {
        "description": {"type": "string"},
        "engagements": {"type": "array", "items": {"type": "string"}},
        "dependencies": {"type": "array", "items": {"type": "string"}},
        "invariants": {"type": "array", "items": {"type": "string"}}
      }
    }
  },
  "required": ["nodes", "workflow"]
}
